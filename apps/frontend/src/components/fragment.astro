---
import type { CollectionEntry } from "astro:content"
import ArrowUpRight from "~/components/icons/arrow-up-right.astro"

export type Props = {
    as: HTMLElement | "fragment"
}

const { as, ...props } = Astro.props
const Component = as
---

<>
    {
        as === "fragment" ? (
            <slot />
        ) : (
            <Component {...props}>
                {props.children}
            </Component>
        )
    }
</>