---
    import dayjs from "dayjs"

    const coords = {lat: 26.2041, long: 28.0473}
    const resp = await fetch(`https://api.openweathermap.org/data/2.5/weather?lat=${coords.lat}&lon=${coords.long}&appid=${import.meta.env.OPEN_WEATHER_API_KEY}&units=metric`)

    const { main: weather } = await resp.json()
